<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:ExanimaTools.ViewModels"
             x:Class="ExanimaTools.Controls.TeamManagerControl"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <viewmodels:TeamManagerViewModel/>
    </UserControl.DataContext>
    <StackPanel Margin="16">
        <Button Content="Add Team Member" Command="{Binding OpenAddDialogCommand}" Width="180"/>
        <ListBox ItemsSource="{Binding TeamMembers}" SelectedItem="{Binding SelectedTeamMember}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                        <TextBlock Text=" | "/>
                        <TextBlock Text="{Binding Role}"/>
                        <TextBlock Text=" | "/>
                        <TextBlock Text="{Binding Rank}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Border Background="#222" Padding="16" CornerRadius="8" IsVisible="{Binding IsAddDialogOpen}">
            <StackPanel>
                <TextBlock Text="Add New Team Member" FontWeight="Bold" Margin="0,0,0,8" Foreground="White"/>
                <TextBox Watermark="Name" Text="{Binding NewTeamMember.Name, Mode=TwoWay}" Background="#111" Foreground="White"/>
                <ComboBox ItemsSource="{Binding AllRoles}" SelectedItem="{Binding NewTeamMember.Role, Mode=TwoWay}" MinWidth="120" MaxWidth="200" Background="#111" Foreground="White"/>
                <ComboBox ItemsSource="{Binding AllRanks}" SelectedItem="{Binding NewTeamMember.Rank, Mode=TwoWay}" MinWidth="120" MaxWidth="200" Background="#111" Foreground="White"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontWeight="Bold" Margin="0,4,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Content="Save" Command="{Binding AddTeamMemberAsyncCommand}" Background="#000" Foreground="#fff"/>
                    <Button Content="Cancel" Margin="8,0,0,0" Command="{Binding CloseAddDialogCommand}" Background="#000" Foreground="#fff"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
