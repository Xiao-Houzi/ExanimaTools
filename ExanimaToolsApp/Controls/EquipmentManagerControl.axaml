<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:ExanimaTools.Models"
             xmlns:viewmodels="clr-namespace:ExanimaTools.ViewModels"
             xmlns:controls="clr-namespace:ExanimaTools.Controls"
             x:Class="ExanimaTools.Controls.EquipmentManagerControl"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400">
    <UserControl.DataContext>
        <viewmodels:EquipmentManagerViewModel/>
    </UserControl.DataContext>
    <DockPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" DockPanel.Dock="Top">
            <TextBlock Text="Equipment Arsenal" FontWeight="Bold" FontSize="20"/>
            <TextBlock Text="  " />
            <TextBlock Text="Add, edit, or remove equipment pieces." FontStyle="Italic"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" DockPanel.Dock="Top">
            <Button Content="Add" Command="{Binding AddEquipmentCommand}" Margin="0,0,8,0"/>
            <Button Content="Edit" Command="{Binding EditEquipmentCommand}" Margin="0,0,8,0" IsEnabled="{Binding SelectedEquipment}"/>
            <Button Content="Remove" Command="{Binding RemoveEquipmentCommand}" IsEnabled="{Binding SelectedEquipment}"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,0,0,8" DockPanel.Dock="Top">
            <TextBlock Text="Add New Equipment" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBox Width="120" Watermark="Name" Text="{Binding NewEquipment.Name, Mode=TwoWay}"/>
                <ComboBox Width="100" ItemsSource="{Binding EquipmentTypes}" SelectedItem="{Binding NewEquipment.Type, Mode=TwoWay}"/>
                <ComboBox Width="100" ItemsSource="{Binding EquipmentSlots}" SelectedItem="{Binding NewEquipment.Slot, Mode=TwoWay}"/>
                <ComboBox Width="100" ItemsSource="{Binding ArmourLayers}" SelectedItem="{Binding NewEquipment.Layer, Mode=TwoWay}"/>
                <TextBox Width="60" Watermark="Stat (e.g. Impact:5)" Text="{Binding NewStatInput, Mode=TwoWay}"/>
                <Button Content="Add Stat" Command="{Binding AddStatCommand}"/>
                <Button Content="Add Equipment" Command="{Binding AddNewEquipmentCommand}"/>
            </StackPanel>
            <ItemsControl ItemsSource="{Binding NewEquipment.Stats}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Key}"/>
                            <TextBlock Text=": "/>
                            <TextBlock Text="{Binding Value}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <DataGrid ItemsSource="{Binding EquipmentList}" SelectedItem="{Binding SelectedEquipment, Mode=TwoWay}" AutoGenerateColumns="False" Height="250">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                <DataGridTextColumn Header="Stats" Binding="{Binding Stats.Count}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="3*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,8,0,0"/>
        <TextBlock Text="{Binding ConfirmationMessage}" Foreground="Green" Margin="0,2,0,0"/>
    </DockPanel>
</UserControl>
