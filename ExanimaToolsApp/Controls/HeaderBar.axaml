<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ExanimaTools.Controls.HeaderBar"
             Height="128">
    <Border Background="{DynamicResource AppBackgroundBrush}" CornerRadius="0,0,12,12" Padding="24,16,24,16">
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <!-- Logo Placeholder -->
            <Ellipse Width="48" Height="48" Fill="#555" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="16" DockPanel.Dock="Left">
                <TextBlock Text="Exanima Tools" FontSize="32" FontWeight="Bold" Foreground="#FFF"/>
                <TextBlock Text="for Exanima Players" FontSize="18" Foreground="#BBB" Margin="16,0,0,0"/>
            </StackPanel>
            <!-- Close Button -->
            <Button Content="âœ•" Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Click="OnCloseButtonClick" DockPanel.Dock="Right"/>
        </DockPanel>
    </Border>
</UserControl>
